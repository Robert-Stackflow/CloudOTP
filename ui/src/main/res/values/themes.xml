<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Platform.Theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/custom_color_app_fg_1</item>
        <item name="colorControlActivated">@color/custom_color_app_fg_1</item>
        <item name="colorPrimaryDark">@color/custom_color_app_fg_1</item>
