        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
    </style>

    <style name="AppTheme" parent="Platform.Theme">
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.Color1" parent="@style/AppTheme">
        <item name="colorPrimary">@color/custom_color_app_fg_1</item>
        <item name="colorControlActivated">@color/custom_color_app_fg_1</item>
